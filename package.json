{
    "name": "my-app",
    "version": "1.0.0",
    "description": "",
    "main": "server.js",
    "scripts": {
        "server": "node dist/server.js",
        "client": "npm --prefix client start",
        "predev": "npm run test:all",
        "dev": "concurrently --kill-others-on-fail \"npm run server:ts\" \"npm run client\"",
        "client-build": "npm --prefix client run build",
        "prestart": "npm run test:all",
        "start": "npm run build && npm run client-build && npm run server",
        "build": "tsc",
        "server:ts": "tsc-watch --onSuccess \"node dist/server.js\"",
        "test": "jest --coverage --no-clearConsole",
        "test:watch": "jest --watch",
        "test:frontend": "npm --prefix client test",
        "test:all": "npm test && npm run test:frontend"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "axios": "^1.4.0",
        "bad-words": "^3.0.4",
        "bcrypt": "^5.1.0",
        "concurrently": "^6.5.1",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "jsonwebtoken": "^9.0.0",
        "mysql": "^2.18.1",
        "node-cron": "^3.0.2",
        "nodemailer": "^6.9.3",
        "validator": "^13.9.0",
        "winston": "^3.9.0"
    },
    "devDependencies": {
        "@types/bad-words": "^3.0.1",
        "@types/bcrypt": "^5.0.0",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.5",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/mysql": "^2.15.21",
        "@types/node-cron": "^3.0.8",
        "@types/nodemailer": "^6.4.8",
        "@types/supertest": "^2.0.14",
        "@types/validator": "^13.7.17",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-watch": "^6.0.4",
        "typescript": "^5.1.3"
    }
}
